<body id="form-body">
	<div class="container">
		<div class="panel panel-default sign-panel">
			<div class="panel-heading"><h2>Sign Up</h2></div>
				<div class="panel-body">
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
					  wrapper: :horizontal_form,
					  html: { class: 'form-horizontal' }) do |f| %>
					  <%= f.error_notification %>

					  <%= f.input :email, placeholder: 'Enter email', label: false %>

					  <%= f.input :password, placeholder: 'Password', label: false %>

					  <%= f.input :password_confirmation, placeholder: 'Confirm Password', label: false %>

					  <%= f.button :submit %>  or 

					   <%= link_to 'Sign In', new_user_session_path, class: "btn btn-default" %>
					<% end %>
					<br>
					<%= link_to 'Sign up with Google', user_google_oauth2_omniauth_authorize_path, class: "btn btn-default" %>
					<%= link_to 'Sign up with Facebook', user_facebook_omniauth_authorize_path, class: "btn btn-default" %>
					</div>
			</div>
	</div>
</body>

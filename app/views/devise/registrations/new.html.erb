<body id="form-body">
	<div class="container">
		<div class="panel panel-default sign-panel">
			<div class="panel-heading"><h2>Sign Up</h2></div>
				<div class="panel-body">
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
					  wrapper: :horizontal_form,
					  html: { class: 'form-horizontal' }) do |f| %>
					  <%= f.error_notification %>

					  <%= f.input :email, placeholder: 'Enter email', label: false %>

					  <%= f.input :password, placeholder: 'Password', label: false %>

					  <%= f.input :password_confirmation, placeholder: 'Confirm Password', label: false %>

					  <%= f.button :submit %>
					<% end %>

					<%= render "devise/shared/links" %>
					</div>
			</div>
	</div>
</body>

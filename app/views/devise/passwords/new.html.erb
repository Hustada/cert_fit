<body id="form-body">
	
<div class="container">
		<div class="panel panel-default sign-panel">
			<div class="panel-heading"><h2>Forgot your password?</h2></div>
				<div class="panel-body">

				<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
				wraper: :horizontal_form,
				html: { method: :post }) do |f| %>
				 <%= f.error_notification %>

				 <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
		
				<%= f.button :submit, "Send me reset password instructions" %>

				<% end %>

				<%= render "devise/shared/links" %>
				</div>
			</div>
	</div>
</body>
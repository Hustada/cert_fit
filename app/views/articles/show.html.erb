
<body id="form-body">
<%= render 'shared/alt-header' %>

<% set_meta_tags :og => {
                  :title    => "#{@article.title}",
                  :description => "#{@article.body}",
                  :type     => 'article',
                  :url      => "#{article_url(@article)}",
                  :image    => "#{@article.image.url}",
                  } %>

	<div class="container">
		<div class="article-container">
			<h2><%= @article.title %></h2>
			<% if @article.image? %>
			<%= image_tag @article.image.url(:large), class: "img-fluid img-responsive" %>
			<% end %>
			<p><%= simple_format @article.body %></p>
		</div>
	</div>
</body>
